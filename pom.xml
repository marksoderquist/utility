<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>org.novaworx</groupId>
	<artifactId>utility</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	
	<name>Novaworx Utility Library</name>
	<description></description>
	<url>http://www.novaworx.org</url>
	<inceptionYear>2007</inceptionYear>
	
	<organization>
		<name>Novaworx</name>
		<url>http://www.novaworx.org</url>
	</organization>
	
	<ciManagement>
		<system>Continuum</system>
		<url>http://www.novaworx.org/continuum</url>
	</ciManagement>
	
	<developers>
		<developer>
			<id>mvsoder</id>
			<name>Mark Soderquist</name>
			<email>mark@southbranchcontrols.com</email>
			<roles>
				<role>Manager</role>
				<role>Architect</role>
				<role>Engineer</role>
			</roles>
			<organization>Novaworx</organization>
			<timezone>-7</timezone>
		</developer>
	</developers>
	
	<scm>
		<connection> scm:svn:http://svn.novaworx.org/software/utility/trunk</connection>
	</scm>
	
	<repositories>
		<repository>
			<id>novaworx</id>
			<name>Novaworx</name>
			<url>http://mvn.novaworx.org/release</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>novaworx-snapshot</id>
			<name>Novaworx Snapshot</name>
			<url>http://mvn.novaworx.org/snapshot</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
	</repositories>
	
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.0</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<build>
		<sourceDirectory>source/main/java</sourceDirectory>
		<testSourceDirectory>source/test/java</testSourceDirectory>
		<resources>
			<resource>
				<directory>source/main/resources</directory>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>source/test/resources</directory>
			</testResource>
		</testResources>
		
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			
			<plugin>
				<artifactId>maven-site-plugin</artifactId>
				<configuration>
					<siteDirectory>source/site</siteDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>index</report>
							<report>summary</report>
							<report>project-team</report>
							<report>license</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jxr-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>changelog-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>taglist-maven-plugin</artifactId>
			</plugin>
			<!--
			<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-pmd-plugin</artifactId>
			
			<configuration>
			<sourcejdk>1.6</sourcejdk>
			<targetjdk>1.6</targetjdk>
			<rulesets>
			<ruleset>/rulesets/basic.xml</ruleset>
			<ruleset>/rulesets/controversial.xml</ruleset>
			</rulesets>
			<format>xml</format>
			<linkXref>true</linkXref>
			<sourceEncoding>utf-8</sourceEncoding>
			
			<minimumTokens>100</minimumTokens>
			</configuration>
			</plugin>
			-->
		</plugins>
	</reporting>
	
	<distributionManagement>
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>novaworx</id>
			<name>Novaworx Maven Repository</name>
			<url>file:///home/novaworx/mvn/release</url>
		</repository>
		
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>novaworx-snapshot</id>
			<name>Novaworx Maven Snapshot Repository</name>
			<url>file:///home/novaworx/mvn/snapshot</url>
		</snapshotRepository>
	</distributionManagement>
</project>
